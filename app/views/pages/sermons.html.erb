<div class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-white mb-4">Sermons</h1>
      <p class="text-lg text-gray-300">Découvrez nos derniers sermons et enseignements</p>
    </div>

    <% if @sermons.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @sermons.each do |sermon| %>
          <%= link_to sermon_path(sermon), class: "group" do %>
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 transform hover:scale-105">
              <div class="p-6">
                <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-indigo-400 transition-colors"><%= sermon.title %></h3>
                <p class="text-gray-400 mb-4"><%= sermon.speaker %></p>
                <% if sermon.description.present? %>
                  <p class="text-gray-300 mb-4 line-clamp-3"><%= truncate(sermon.description, length: 120) %></p>
                <% end %>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-400"><%= sermon.date.strftime("%d %b %Y") %></span>
                  <span class="text-indigo-400 group-hover:text-indigo-300 transition-colors">Voir détails →</span>
                </div>
                <% if sermon.scripture_references.present? %>
                  <p class="text-xs text-gray-500 mt-2 italic"><%= sermon.scripture_references %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-400 text-lg">Aucun sermon disponible pour le moment.</p>
      </div>
    <% end %>

    <!-- Filtres et recherche -->
    <div class="mt-12 bg-gray-800 p-6 rounded-lg">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="search" class="block text-sm font-medium text-gray-300">Rechercher</label>
          <input type="text" id="search" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white" placeholder="Rechercher un sermon...">
        </div>
        <div>
          <label for="speaker" class="block text-sm font-medium text-gray-300">Orateur</label>
          <select id="speaker" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white">
            <option value="">Tous les orateurs</option>
            <option value="jean-dupont">Pasteur Jean Dupont</option>
            <option value="marie-martin">Pasteur Marie Martin</option>
          </select>
        </div>
        <div>
          <label for="date" class="block text-sm font-medium text-gray-300">Date</label>
          <select id="date" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white">
            <option value="">Toutes les dates</option>
            <option value="this-month">Ce mois</option>
            <option value="last-month">Le mois dernier</option>
            <option value="this-year">Cette année</option>
          </select>
        </div>
      </div>
    </div>
  </div>
</div> 
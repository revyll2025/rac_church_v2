<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <h1 class="text-2xl font-semibold text-gray-100 mb-6">Sermons</h1>
    
    <% if @sermons.any? %>
      <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
        <% @sermons.each do |sermon| %>
          <%= link_to member_sermon_path(sermon), class: "group" do %>
            <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-xl transition-all duration-300">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                    </svg>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="text-sm font-medium text-gray-900 truncate group-hover:text-indigo-600 transition-colors"><%= sermon.title %></dt>
                      <dd class="mt-1 text-sm text-gray-500">
                        Par <%= sermon.speaker %> le <%= sermon.date.strftime("%d/%m/%Y") %>
                      </dd>
                      <% if sermon.description.present? %>
                        <dd class="mt-2 text-xs text-gray-400 line-clamp-2"><%= truncate(sermon.description, length: 80) %></dd>
                      <% end %>
                    </dl>
                  </div>
                </div>
              </div>
              <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                  <span class="font-medium text-indigo-600 group-hover:text-indigo-500">Voir les détails →</span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-400 text-lg">Aucun sermon disponible pour le moment.</p>
      </div>
    <% end %>
  </div>
</div>

